<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/survey_sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Student Information"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/survey_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.1 For me this course was:"/>


    <RadioGroup
        android:id="@+id/survey_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required"/>
        <RadioButton
            android:id="@+id/rb_elective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elective" />
    </RadioGroup>

</LinearLayout>